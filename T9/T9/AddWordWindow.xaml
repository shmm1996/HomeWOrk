<Window x:Class="T9.AddWordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T9"
        mc:Ignorable="d"
        Title="AddWordWindow" Height="150" Width="260" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Enter Word:" VerticalAlignment="Bottom" Margin="10,0"/>
        <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10, 0, 10, 10" Name="inputField" MaxLines="1"/>
        <Button Grid.Column="0" Grid.Row="2" Margin="10,0,5,10" Name="acceptBtn" Content="Accept"/>
        <Button Grid.Column="1" Grid.Row="2" Margin="5,0,10,10" Name="cancelBtn" Content="Cancel"/>
    </Grid>
</Window>
